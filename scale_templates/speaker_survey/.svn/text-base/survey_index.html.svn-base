{% extends "speaker_survey/base.html" %}
{% load i18n %}
{% block content %}
<div id="content-main">

{% if new %}
<h2>
Unfilled Surveys
</h2>

<ul>
{% for s in new %}
    <li>
        <a href="{{ s.id }}/">{{ s|escape }}</a>
        {% if s.url %}
        <a href="{{ s.url|escape }}">[ Talk link ]</a>
        {% endif %}
    </li>
{% endfor %}
</ul>
{% endif %}

{% if old %}
<h2>
Filled Surveys
</h2>

<ul>
{% for s in old %}
    <li>
        <a href="{{ s.id }}/">{{ s|escape }}</a>
        {% if s.url %}
        <a href="{{ s.url|escape }}">[ Talk link ]</a>
        {% endif %}
    </li>
{% endfor %}
</ul>
{% endif %}


</div>
{% endblock %}

